            <div hidden="">
                {{searchParams}}
            </div>
               

	

             <div class="col-md-4 chain-grid scrollArea" current-page="currentPage"  dir-paginate="ebook in ebooks | priceFilter:priceInfo | searchFilter:searchParams | titleFilter:searchParams | isbnFilter:searchParams | authorFilter:searchParams | descriptionFilter:searchParams | genreFilter:genreparam | itemsPerPage:pageSize"   pagination-id="ebooksPagination" >
                            
	 
			<div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" ng-src="{{ebook.ebook_image.standard.url}}" ui-sref="ebook({ebookID:{{ebook.id}}})">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">{{ebook.title}}<p><small> {{ebook.author}}</small></p>
      <i class="material-icons right">more_vert</i></span>
   
         <div class="mdl-card__actions ibhuku-card-product-actions"><strong class="mdl-typography--headline ibhuku-product-price"><ins><span>KES {{ebook.price}}</span></ins></strong>

                <ngcart-addtocart  quantity="1" quantity-max="1"  id={{ebook.id}}  name="{{ebook.title}}" price="{{ebook.price}}" data="[ebook.ebook_image.thumb.url,ebook.author]"></ngcart-addtocart>
                               


                               
                            </div>


    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">{{ebook.title}}<i class="material-icons right">close</i></span>
      <p>{{ebook.description}}</p>
    </div>
  </div>




				
		






                         
                        </div>

                    </div>




                <dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)"  pagination-id="ebooksPagination"></dir-pagination-controls>

