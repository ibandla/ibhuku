       <div  class=" sidebar1 span_1_of_left">
          <div class="of-left">
            <h3 class="cate">GENRES</h3>
            </div>
            <ul class="menu">
             <li class="item1" ng-click="unsetSelected()" ng-class="{selected: genreparam == 0}" ng-cloak="">All</li>

            <li ng-repeat="genre in genres" class="item1" ng-click="setSelected(genre)" ng-class="{selected: genre == selectedgenre}" ng-cloak="">{{genre.name}}</li></ul>

          </div>


                </div>
   
                </div>

                <div class="col-md-9 product-price1">

     

   
	
                <div class="product-right-top">
                    <div  class="top-product">
